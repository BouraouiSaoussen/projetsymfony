{% extends 'front.html.twig' %}

{% block title %}Hello AcceuilController!{% endblock %}

{% block body %}
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Welcome</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Here !</p>
                </div>
            </div>
        </header>        
        <section class="py-5">
        
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    
                   {% for pt in post %}
                    <div class="col mb-5">
                    
                        <div class="card h-100">                            
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">blog</div>                            
                            <img class="card-img-top" src="{{ asset('uploads/'~pt.image) }}" alt="..." />                            
                            <div class="card-body p-4">
                                <div class="text-center">                                    
                                    <h5 class="fw-bolder">{{ pt.title }} </h5>                                    
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div>                                    
                                    <span>Published on: {{ pt.createdAt|date('d/m/Y') }} </span>
                                    <br>
                                    {{ pt.content }} 
                                </div>
                            </div>                            
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="{{path('app_item', {id: pt.id} ) }}">View more</a></div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </section> 
{% endblock %}
